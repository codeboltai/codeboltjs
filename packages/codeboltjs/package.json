{
  "name": "@codebolt/codeboltjs",
  "version": "5.0.3",
  "description": "",
  "keywords": [],
  "author": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node script/copy-wasm.js",
    "build:webpack": "webpack",
    "build:all": "npm run build && npm run build:webpack",
    "build:docs": "typedoc --plugin typedoc-plugin-missing-exports",
    "build:jsondocs": "typedoc --plugin typedoc-plugin-missing-exports --json out.json --pretty",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:debug": "DEBUG_TESTS=true jest",
    "clean": "powershell -Command \"Remove-Item -Path 'dist' -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path 'build' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "lint": "eslint src/**/*.ts && tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeboltai/codeboltjs.git",
    "directory": "packages/codeboltjs"
  },
  "license": "MIT",
  "homepage": "https://codeboltai.github.io",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@codebolt/types": "workspace:*",
    "@types/uuid": "^10.0.0",
    "buffer": "^6.0.3",
    "execa": "^9.5.2",
    "js-yaml": "^4.1.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "stream-browserify": "^3.0.0",
    "timers": "^0.1.1",
    "util": "^0.12.5",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.2",
    "@types/uri-templates": "^0.1.34",
    "@types/ws": "^8.5.10",
    "jest": "^30.2.0",
    "jest-serial-runner": "^1.2.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^3.15.0",
    "typedoc-plugin-missing-exports": "^4.1.0",
    "typescript": "^5.4.5",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testTimeout": 50000
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  }
}