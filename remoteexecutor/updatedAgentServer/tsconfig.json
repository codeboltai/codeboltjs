{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021", "DOM"],
    "types": ["node", "jest"],
    "paths": {
      "@codebolt/codeboltjs": ["../../../packages/codeboltjs/dist"],
      "@codebolt/types/*": ["../../../common/types/dist/*"],
      "@codebolt/types/sdk": ["../../../common/types/dist/sdk-types"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}